<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <!-- MENSAJE HOME -->
    <TextView
        android:id="@+id/text_home"
        android:layout_width="202dp"
        android:layout_height="61dp"
        android:text="HOME"
        android:textSize="40sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- Boton Perfil -->
    <Button
        android:id="@+id/btn_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:width="315dp"
        android:backgroundTint="@color/celeste"
        android:paddingStart="80dp"
        android:paddingEnd="80dp"
        android:text="@string/perfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_home" />

    <!-- Boton Ingresar Dinero -->
    <Button
        android:id="@+id/btn_enviardinero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:width="315dp"
        android:backgroundTint="@color/celeste"
        android:paddingStart="80dp"
        android:paddingEnd="80dp"
        android:text="@string/enviar_dinero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_perfil" />

    <!-- Boton Enviar Dinero -->
    <Button
        android:id="@+id/btn_ingresardinero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:width="315dp"
        android:backgroundTint="@color/celeste"
        android:paddingStart="80dp"
        android:paddingEnd="80dp"
        android:text="@string/ingresar_dinero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_enviardinero" />

    <!-- Boton Cerrar Sesión -->
    <Button
        android:id="@+id/btn_cerrarsesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:width="315dp"
        android:backgroundTint="@color/celeste"
        android:paddingStart="80dp"
        android:paddingEnd="80dp"
        android:text="Cerrar Sesión"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ingresardinero" />


</androidx.constraintlayout.widget.ConstraintLayout>